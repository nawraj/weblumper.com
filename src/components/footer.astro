---
import logo from '../assets/images/logo-light.png'

const year = new Date().getFullYear()
import {socialData} from '../data/data'

interface SocialData{
    link: string;
    icon: string;
}

---
<footer class="footer bg-slate-800 dark:bg-gray-900 relative text-gray-200 dark:text-gray-200">
    <div class="py-[30px] px-0 border-t border-slate-800">
        <div class="container relative text-center">
            <div class="grid lg:grid-cols-12 md:grid-cols-3 grid-cols-1 items-center">
                <div class="lg:col-span-3 md:text-start text-center">
                    <a href="#" class="text-[22px] focus:outline-none">
                        <!-- ICON (green) -->
                            <i data-feather="zap" class="w-7 h-7 text-green-600 group-hover:text-green-500 transition justify-center items-center"></i>
                            <!-- TEXT (black + green accent) -->
                            <span class="font-bold text-2xl">
                                <span class="text-white">Web</span><span class="text-green-600">Lumper</span>
                            </span>
                    </a>
                </div>

                <div class="lg:col-span-5 text-center mt-6 md:mt-0">
                    <p class="mb-0">Â© {year} <a href="https://weblumper.com/" class="text-reset">WebLumper</a> All Rights Reserved.</p>
                </div>

                <ul class="lg:col-span-4 list-none md:text-end text-center mt-6 md:mt-0">
                    {socialData.map((item:SocialData)=>( 
                        <li class="inline mx-[2px]"><a href={item.link} target="_blank" class="size-8 inline-flex justify-center items-center border border-gray-700 dark:border-gray-800 rounded-md hover:border-green-600 dark:hover:border-green-600 hover:bg-green-600 dark:hover:bg-green-600"><i data-feather={item.icon} class="size-4 align-middle" title="Buy Now"></i></a></li>
                    ))}
                </ul>
            </div>
        </div>
    </div>
</footer>